<script>
(function() {
  const track = document.getElementById('carousel-track');
  const dots = document.querySelectorAll('.carousel-dot');
  const carousel = document.getElementById('magic-moment-carousel');
  let currentSlide = 0;
  let autoRotateInterval;
  let isPaused = false;
  
  function goToSlide(slideIndex) {
    currentSlide = slideIndex;
    const translateX = -(slideIndex * 25); // 25% per slide since width is 25%
    track.style.transform = `translateX(${translateX}%)`;
    
    // Update dots
    dots.forEach((dot, index) => {
      if (index === slideIndex) {
        dot.style.background = '#fbbf24';
        dot.classList.add('active');
      } else {
        dot.style.background = 'rgba(255,255,255,0.4)';
        dot.classList.remove('active');
      }
    });
  }
  
  function nextSlide() {
    if (isPaused) return;
    currentSlide = (currentSlide + 1) % 4;
    goToSlide(currentSlide);
  }
  
  function startAutoRotate() {
    autoRotateInterval = setInterval(nextSlide, 5000); // 5 seconds
  }
  
  function stopAutoRotate() {
    if (autoRotateInterval) {
      clearInterval(autoRotateInterval);
    }
  }
  
  // Manual dot controls
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSlide(index);
      stopAutoRotate();
      setTimeout(startAutoRotate, 10000); // Restart auto-rotate after 10 seconds
    });
  });
  
  // Pause on hover
  carousel.addEventListener('mouseenter', () => {
    isPaused = true;
  });
  
  carousel.addEventListener('mouseleave', () => {
    isPaused = false;
  });
  
  // Touch/swipe support for mobile
  let startX = 0;
  let isDragging = false;
  
  carousel.addEventListener('touchstart', (e) => {
    startX = e.touches[0].clientX;
    isDragging = true;
    isPaused = true;
  });
  
  carousel.addEventListener('touchmove', (e) => {
    if (!isDragging) return;
    e.preventDefault();
  });
  
  carousel.addEventListener('touchend', (e) => {
    if (!isDragging) return;
    isDragging = false;
    isPaused = false;
    
    const endX = e.changedTouches[0].clientX;
    const diffX = startX - endX;
    
    if (Math.abs(diffX) > 50) { // Minimum swipe distance
      if (diffX > 0) {
        // Swipe left - next slide
        currentSlide = (currentSlide + 1) % 4;
      } else {
        // Swipe right - previous slide
        currentSlide = (currentSlide - 1 + 4) % 4;
      }
      goToSlide(currentSlide);
      stopAutoRotate();
      setTimeout(startAutoRotate, 10000);
    }
  });
  
  // Start the carousel
  startAutoRotate();
})();
</script>